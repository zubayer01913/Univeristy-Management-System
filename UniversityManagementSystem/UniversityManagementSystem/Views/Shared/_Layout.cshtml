<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("University Management System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <ul class="nav navbar-nav">                  
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Department <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li role="separator" class="divider"></li>
                                <li>@Html.ActionLink("Department Create", "Create", "Departments")</li>
                                <li role="separator" class="divider"></li>
                                <li>@Html.ActionLink("View Departmnets", "Index", "Departments")</li>
                            </ul>
                        </li>
                    </ul>

                    <ul class="nav navbar-nav">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Course <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li role="separator" class="divider"></li>
                                <li>@Html.ActionLink("Course Create", "Create", "Courses")</li>
                                <li role="separator" class="divider"></li>
                                <li>@Html.ActionLink("Enroll in a Course", "Create", "EnRolls")</li>
                                <li role="separator" class="divider"></li>
                                <li>@Html.ActionLink("Course Assign Teacher", "Assign", "CourseToTeacherAssign")</li>
                                <li role="separator" class="divider"></li>
                                <li>@Html.ActionLink("Course View Teacher", "Index", "CourseToTeacherAssign")</li>
                                <li role="separator" class="divider"></li>
                                <li>@Html.ActionLink("Course Sehedule", "Sehedule", "CourseToTeacherAssign")</li>
                               
                            </ul>
                        </li>
                    </ul>
                    <ul class="nav navbar-nav">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Teacher <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li role="separator" class="divider"></li>
                                <li>@Html.ActionLink("Teacher Registration", "Create", "Teachers")</li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="nav navbar-nav"> 
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Student <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li role="separator" class="divider"></li>
                                <li>@Html.ActionLink("Register Student", "Create", "RegisterStudents")</li>
                                <li role="separator" class="divider"></li>
                                <li>@Html.ActionLink("Save Student Result", "Create", "StudentResult")</li>
                                <li role="separator" class="divider"></li>
                                <li>@Html.ActionLink("View Student Result", "Create", "StudentResult")</li>
                            </ul>
                        </li>
                    </ul>
                    <li>@Html.ActionLink("Allocate Classrooms", "Create", "RoomNoAllocats")</li>
                    <ul class="nav navbar-nav">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Other <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li role="separator" class="divider"></li>
                                <li>@Html.ActionLink("Room Create", "Create", "Rooms")</li>
                                <li role="separator" class="divider"></li>
                                <li>@Html.ActionLink("Semester Create", "Create", "Semesters")</li>
                            </ul>
                        </li>
                    </ul>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
