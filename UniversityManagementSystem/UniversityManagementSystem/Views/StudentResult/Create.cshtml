@model UniversityManagementSystem.Models.StudentResult

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>EnrollCourse</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <p class="control-label col-md-2">Student Reg.No</p>
            <div class="col-md-10">
                @Html.DropDownList("RegistrationNumber", null, htmlAttributes: new { @class = "control-label col-md-2", id = "registerId", })
            </div>
        </div>
        <div class="form-group">
            <p class="control-label col-md-2">Stuent Name</p>
            <div class="col-md-10">
                <input type="text" id="studentName" />
            </div>
        </div>
        <div class="form-group">
            <p class="control-label col-md-2">Teaher</p>
            <div class="col-md-10">
                <input type="text" id="studentEmail" />
            </div>
        </div>
        <div class="form-group">
            <p class="control-label col-md-2">Teaher</p>
            <div class="col-md-10">
                <input type="text" id="studentDepartment" />
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Student Reg.No</p>
            <div class="col-md-10">
                @Html.DropDownList("CourseName", null, htmlAttributes: new { @class = "control-label col-md-2", id = "abc" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SelectGradLetter, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("SelectGradLetter", null, htmlAttributes: new { @class = "control-label col-md-2", id = "abc" })
                @*@Html.DropDownListFor(model => model.SelectGradLetter, (SelectList)ViewBag.CategoryList)*@
                @Html.ValidationMessageFor(model => model.SelectGradLetter, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" onclick="sendfromdata()" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}


<script src="~/Scripts/jquery-1.10.2.js"></script>

<script>
    var v = $('#abc').val();
    var c = $('#dd').val();

    $('#registerId').on("change", function () {
        var id = $('#registerId').val();

        $.post("/StudentResult/GetStudentList", { id: id }).success(function (data) {
            console.log(data);
            var obj = data[0];
            $('#studentName').val(obj.StudentName);
            $('#studentEmail').val(obj.StudentEmail);
            $('#studentDepartment').val(obj.Name);

        });
    });



    function sendfromdata() {
        var model = {
            id: 0,
            studentReg: $('#registerId').val(),
            studentName: $('#studentName').val(),
            studentEmail: $('#studentEmail').val(),
            departmentName: $('#studentDepartment').val(),
            selectCourse: $('#abc').val(),
            enrollDate: $('#dd').val()
            //courseCredit: $('#courseCredit').val()

        };

        $.post("/StudentResult/Create", model).then(function () {

        });




    }
</script>
